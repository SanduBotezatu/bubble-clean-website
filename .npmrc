# Bubble Clean SRL - npm configuration

# Use legacy peer deps to avoid conflicts
legacy-peer-deps=true

# Save exact versions in package.json
save-exact=true

# Disable package-lock.json updates during install
package-lock=true

# Enable audit during install
audit=true

# Set registry (optional, uncomment if using private registry)
# registry=https://registry.npmjs.org/

# Performance improvements
prefer-offline=true
progress=true

